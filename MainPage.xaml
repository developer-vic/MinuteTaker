<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinuteTaker.MainPage">

    <StackLayout Padding="30">
        <Label Text="Voice to Text and Text to Voice App" 
           FontSize="24"
           HorizontalOptions="Center" />
        <Button Text="Speak" 
            Clicked="OnStartListeningClicked" 
            Margin="0,20,0,0" />
        <Label x:Name="outputLabel" 
           Text="Voice recognition output will appear here"
           FontSize="18"
           Margin="20" />
        
        
        <Entry x:Name="inputEntry" 
           Text="Type text to convert to speech" />
        <Button Text="Convert to Speech" 
            Clicked="OnStartReadingClicked" 
            Margin="0,20,0,0" />


        <Button Text="STOP" 
            Clicked="OnStopListenReadClicked" 
            Margin="0,20,0,0" />
    </StackLayout>

</ContentPage>
